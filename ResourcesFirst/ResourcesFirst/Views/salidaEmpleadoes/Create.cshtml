@model ResourcesFirst.Models.salidaEmpleado

@{
    ViewBag.Title = "Create";
    var lista = new List<SelectListItem>();
    lista.Add(new SelectListItem() { Value = "Renuncia", Text = "Renuncia" });
    lista.Add(new SelectListItem() { Value = "Despido", Text = "Despido" });
    lista.Add(new SelectListItem() { Value = "Deahuciso", Text = "Deahuciso" });
}


<h2>Create</h2>


